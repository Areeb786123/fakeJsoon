<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_fragment_bg">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_10"
        android:text="@string/addPost"
        android:layout_marginHorizontal="@dimen/size_20"
        android:textColor="@color/black"
        android:textSize="@dimen/font_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/userNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/size_10"
        android:layout_marginVertical="@dimen/size_10"
        android:background="@drawable/ed_bg"
        android:hint="@string/userName"
        android:paddingHorizontal="@dimen/size_12"
        android:paddingVertical="@dimen/size_12"
        app:layout_constraintTop_toBottomOf="@id/titleTextView" />

    <EditText
        android:id="@+id/userJobEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/size_10"
        android:layout_marginVertical="@dimen/size_10"
        android:background="@drawable/ed_bg"
        android:hint="@string/job"
        android:paddingHorizontal="@dimen/size_12"
        android:paddingVertical="@dimen/size_12"
        app:layout_constraintTop_toBottomOf="@id/userNameEditText" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/postButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/userJobEditText"
        android:layout_marginTop="@dimen/size_20"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/addPost"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/size_20"
        android:textSize="@dimen/font_16"
        android:textColor="@color/white"
        android:background="@drawable/button_bg"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginVertical="@dimen/size_20"
        android:layout_marginHorizontal="@dimen/size_20"/>

</androidx.constraintlayout.widget.ConstraintLayout>